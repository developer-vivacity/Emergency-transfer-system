

<div class="patients-index">
  <h1 class="text-center">Allergies List</h1>

  <%= link_to "New Allergy", new_allergy_path, class: 'btn btn-info mb-10' %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @allergies.each do |allergy| %>
        <tr>
        <td><%= allergy.description %></td>
        <td><%= link_to 'Edit', edit_allergy_path(allergy) %></td>
        <td><%= link_to 'Destroy', allergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



