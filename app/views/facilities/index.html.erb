<div class="patients-index">

  <h1>Facilities</h1>
  <%= link_to "New Facility", new_facility_path, class: 'btn btn-info mb-10' %>
  <table class="table">
    <thead>
      <tr>
        <th> Facility Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @facilities.each do |facility| %>
        <tr>
          <td><%= facility.name %></td>
          <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
          <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
