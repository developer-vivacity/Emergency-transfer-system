

<div class="patients-index">
  <h1 class="text-center">Diagnoses List</h1>

  <%= link_to "New Diagnosis", new_diagnosis_path, class: 'btn btn-info mb-10' %>

  <table class="table">
    <thead>
      <tr>
        <th >Coding System</th>
      <th >Code</th>
      <th >Description</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @diagnoses.each do |diagnosis| %>
        <tr>
          <td><%= diagnosis.coding_system %></td>
          <td><%= diagnosis.code %></td>
          <td><%= diagnosis.description %></td>
          <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
          <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
