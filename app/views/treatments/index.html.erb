

<div class="patients-index">
  <h1 class="text-center">Treatments List</h1>

  <%= link_to "New Treatment", new_treatment_path, class: 'btn btn-info mb-10' %>

  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
      <th>Necessity</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @treatments.each do |treatment| %>
        <tr>
          <td><%= treatment.description %></td>
        <td><%= treatment.necessity %></td>
         <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
        <td><%= link_to 'Destroy', treatment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>