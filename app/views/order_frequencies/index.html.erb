<div class="patients-index">

<h1>Order Frequencies</h1>
<%= link_to "New Order Frequency", new_order_frequency_path, class: 'btn btn-info mb-10' %>
<table class="table">

  <thead>
    <tr>
      <th>Value</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_frequencies.each do |order_frequency| %>
      <tr>
        <td><%= order_frequency.value %></td>
        <% if order_frequency.present? %>
          <% @frq_unit = FrequencyUnit.find_by_id(order_frequency.unit) %>
        <% end %>
        <td><%= @frq_unit.name %></td>
        <td><%= link_to 'Edit', edit_order_frequency_path(order_frequency) %></td>
        <td><%= link_to 'Destroy', order_frequency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>