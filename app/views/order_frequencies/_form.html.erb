<%= form_with(model: order_frequency, local: true) do |form| %>
  <% if order_frequency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order_frequency.errors.count, "error") %> prohibited this order_frequency from being saved:</h2>

      <ul>
      <% order_frequency.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :value %>
    <%= form.text_field :value, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <select name="order_frequency[unit]" class="form-control">
    
      <option value="">Select Unit</option>
    <% if @frequency_unit.present? %>
      <% @frequency_unit.each do |frequency_unit| %>  
        <option value="<%= frequency_unit.id %>" <% if @order_frequency.present? %><% if @order_frequency.unit == frequency_unit.id %> selected<% end %> <% end %> ><%= frequency_unit.name %></option>
      <% end %>
    <% end %>
    </select>
  </div>
  <div class="actions">
    <%= form.submit 'Save Order Frequency', class: 'btn btn-primary' %>
  </div>
<% end %>
