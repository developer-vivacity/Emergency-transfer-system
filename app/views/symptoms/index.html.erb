<div class="patients-index">

<h1>Symptoms</h1>
<%= link_to "New Symptom", new_symptom_path, class: 'btn btn-info mb-10' %>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @symptoms.each do |symptom| %>
      <tr>
      <td><%= symptom.description %></td>
        <td><%= link_to 'Edit', edit_symptom_path(symptom) %></td>
        <td><%= link_to 'Destroy', symptom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>